#include <bits/stdc++.h>

using namespace std;

long long check(long long pos, vector<tuple<long long,long long,long long>>& people){
    long long t = 0;
    for (auto[p,s,d] : people){
        if (pos > p && pos-p > d) t += (pos-p-d)*s;
        else if (pos < p && p-pos > d) t += (p-pos-d)*s;
    }
    return t;
}

int main(){
    ios::sync_with_stdio(false);
    cin.tie(0);
    int n; cin >> n;
    vector<tuple<long long, long long, long long>> people(n);
    long long lo = INT_MAX, hi = 0;
    for (int i = 0; i < n; i++){
        long long p, s, d;
        cin >> p >> s >> d;
        people[i] = {p,s,d};
        lo = min(lo, p);
        hi = max(hi, p);
    }
    while (lo < hi){
        int mid = (lo+hi)/2;
        if (check(mid, people) > check(mid+1, people)) lo = mid+1;
        else hi = mid;
    }
    cout << check(lo, people);
    return 0;
}